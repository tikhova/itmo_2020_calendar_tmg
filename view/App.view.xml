<mvc:View controllerName="sap.ui.tmg.calendar.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>pageTitle}" showHeader="false">
				<VBox alignItems="Center">
					<mvc:XMLView viewName="sap.ui.tmg.calendar.view.Table"/>
					<Button id="addButton" type="Default" text="Добавить" press="addInterval" ariaDescribedBy="genericButtonDescription"/>
					<mvc:XMLView class="legend" viewName="sap.ui.tmg.calendar.view.Legend"/>
					<mvc:XMLView id="calendarView" viewName="sap.ui.tmg.calendar.view.Calendar"/>
				</VBox>
			</Page>
		</pages>
	</App>
</mvc:View>