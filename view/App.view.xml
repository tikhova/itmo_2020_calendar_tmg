<mvc:View
   controllerName="sap.ui.tmg.calendar.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:l="sap.ui.layout"
   xmlns:u="sap.ui.unified"
   displayBlock="true">
   <App>
      <pages>
         <Page title="{i18n>pageTitle}">
            <content>
               <Panel>
                  <content>
					<u:Calendar
							id="calendar"
							months="12"
							select="handleCalendarSelect"
							width="auto"
							intervalSelection="true"
							/>
                  </content>
               </Panel>
            </content>
         </Page>
      </pages>
   </App>
</mvc:View>