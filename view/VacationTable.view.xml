<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m">
	<Table id="table" class="sapUiResponsiveMargin" inset="false" items="{ path: 'vacation>/Intervals', sorter: { path: 'startDate' } }"
		width="auto">
		<headerToolbar>
			<OverflowToolbar>
				<Title text="Расписание отпусков" level="H2"/>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="Начало"/>
			</Column>
			<Column>
				<Text text="Конец"/>
			</Column>
			<Column>
				<Text text="Кол-во дней"/>
			</Column>
			<Column>
				<Text text="Кол-во рабочих дней"/>
			</Column>
			<Column>
				<Text text="Удалить"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text
						text="{ path: 'vacation>startDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'short', source: { pattern: 'ddMMyyyy' } } }"/>
					<Text
						text="{ path: 'vacation>endDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'short', source: { pattern: 'ddMMyyyy' } } }"/>
					<Text text="{vacation>daysCount}"/>
					<ObjectNumber number="{vacation>workingDaysCount}"/>
					<Button type="Reject" text="Удалить" ariaDescribedBy="rejectButtonDescription genericButtonDescription"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>